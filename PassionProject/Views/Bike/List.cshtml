@model List<PassionProject.Models.Bikes>

@{
    ViewBag.Title = "List";
}

<h2>List of Bikes</h2>
<div>
    <a href="/Bike/Add" class="btn btn-primary" style="float:right">ADD BIKE</a> 
</div>
<table id="mytable" class="table table-bordred table-striped">
    <thead>
    <th>BIKE NAME</th>
    <th>MAKE</th>
    <th>MODEL</th>
    <th>COLOR</th>
    <th>EDIT</th>
    <th>DELETE</th>
    </thead>
    <tbody>
        @{ 
            foreach (var Bike in Model)
            {
                <tr>
                    <td><span><a href="/Bike/Show/@Bike.BikeID">@Bike.BikeName</a></span></td>
                    <td><span>@Bike.Make.Name</span></td>
                    <td><span>@Bike.Models.Name</span></td>
                    <td><span>@Bike.Color</span></td>
                    
                    <td> <span><a href="/Bike/Update/@Bike.BikeID"><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>   </a></span></td>
                    
                    <td><span><a href="/Bike/Delete/@Bike.BikeID"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>   </a></span></td>
                </tr>
            }
        }
    </tbody>
</table>
