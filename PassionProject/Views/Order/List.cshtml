@model List<PassionProject.Models.Order>
@{
    ViewBag.Title = "List";
}


<h2>List of Orders</h2>
<div>
    <a href="/Order/Add" class="btn btn-primary" style="float:right">New Order</a>
</div>
<table id="mytable" class="table table-bordred table-striped">
    <thead>
        <th>CUSTOMER NAME</th>
        <th>BIKE NAME</th>
        <th>BIKE MAKE</th>
        <th>BIKE MODEL</th>
        <th>PHONE NUMBER</th>
        <th>DATE OF ORDER</th>
        <th>EDIT</th>
        <th>DELETE</th>
    </thead>
    <tbody>
        @{ //Rendering  loop to retrieve and display all orders in table cells
            foreach (var Order in Model)
            {
                <tr>
                    <td><span><a href="/Order/Show/@Order.OrderID">@Order.Customers.CustomerFname</a></span></td>
                    <td><span>@Order.Bikes.BikeName</span></td>
                    <td><span>@Order.Bikes.Make.Name</span></td>
                    <td><span>@Order.Bikes.Models.Name</span></td>
                    <td><span>@Order.Customers.CustomerHomePhone</span></td>
                    <td><span>@Order.Orderdate</span></td>
                    
                    <td> <span><a href="/Order/Update/@Order.OrderID"><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>   </a></span></td>
                    
                    <td><span><a href="/Order/Delete/Order.OrderID"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>   </a></span></td>
                </tr>
            }
        }
    </tbody>
</table>