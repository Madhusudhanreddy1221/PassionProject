@model List<PassionProject.Models.Make>

@{
    ViewBag.Title = "List";
}

<h2>List of Makes</h2>
<div>
    <a href="/Make/Add" class="btn btn-primary" style="float:right">ADD MAKE</a> <!--button to  add new Make-->
</div>
<table id="mytable" class="table table-bordred table-striped">
    <thead>
    
    <th>MAKE NAME</th>
    <th>EDIT</th>
    <th>DELETE</th>
    </thead>
    <tbody>
        @{ //Rendering  loop to retrieve and display all Makes in table cells
            foreach (var Make in Model)
            {
                <tr>
                                                                                 
                    <td><span><a href="/Make/Show/@Make.MakeID">@Make.Name</a></span></td>
                   
                    <td> <span><a href="/Make/Update/@Make.MakeID"><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>   </a></span></td>
                    <!--Button To Delete Make-->
                    <td><span><a href="/Make/Delete/@Make.MakeID"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>   </a></span></td>
                </tr>
            }
        }
    </tbody>
</table>
